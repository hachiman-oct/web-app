{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "src/js",
    "rootDir": "src/js",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src/js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}